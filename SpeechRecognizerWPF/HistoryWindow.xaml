<Window x:Class="SpeechRecognizerWPF.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechRecognizerWPF"
        mc:Ignorable="d"
        Title="HistoryWindow" Height="450" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="374*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Textbox" Grid.Row="0"></TextBox>
        <Button x:Name="CloseButton" Grid.Row="1" Content="Close" Margin="100,10,100,10" Click="CloseButton_Click"></Button>
    </Grid>
</Window>
