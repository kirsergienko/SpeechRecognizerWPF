<Window x:Class="SpeechRecognizerWPF.Subtitles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechRecognizerWPF"
        mc:Ignorable="d"
        Title="Subtitles"
       AllowsTransparency="True" WindowStyle="None" Topmost="True" ScrollViewer.VerticalScrollBarVisibility="Disabled">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    <Window.Content>
        <TextBox x:Name="textBox1" Foreground="White" TextChanged="textBox1_TextChanged" Margin="0" >
            <TextBox.Background>
                <SolidColorBrush Opacity="0" Color="White"/>
            </TextBox.Background>
            <TextBox.BorderBrush>
                <SolidColorBrush Opacity="0" Color="White"/>
            </TextBox.BorderBrush>
        </TextBox>
    </Window.Content>
</Window>
